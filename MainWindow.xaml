<Window x:Class="ZelentsovLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZelentsovLanguage"
        mc:Ignorable="d"
        Icon="src/school_logo.ico"
        MinHeight="450"
        FontFamily="Comic Sans MS"
        FontSize="16"
        MinWidth="800"
        Title="Zelentsov Language" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="src/school_logo.png" HorizontalAlignment="Left" Margin="10"/>
        <Button Content="Назад" Name="Btn_Back" Click="Btn_Back_Click" HorizontalAlignment="Right" Margin="0 0 10 0" Width="120" Height="30" />
        <TextBlock Text="Language" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42"/>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>
